#!/bin/bash

awsession-clear

export AWS_PROFILE="$1"

AWS_CREDENTIAL_EXPIRATION=$(date -u -v+8H '+%Y-%m-%dT%H:%M:%SZ')
export AWS_CREDENTIAL_EXPIRATION

eval "$(awsdo --disable-cache)"

