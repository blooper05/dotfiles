{
  "env": {
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "MAX_THINKING_TOKENS": "31999",
    "USE_BUILTIN_RIPGREP": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(docker build:*)",
      "Bash(docker logs:*)",
      "Bash(docker run:*)",
      "Bash(docker stop:*)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(git add:*)",
      "Bash(git checkout -b:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(helm lint:*)",
      "Bash(jq:*)",
      "Bash(kubectl cluster-info:*)",
      "Bash(kubectl config current-context:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl diff:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl kustomize:*)",
      "Bash(kubectl logs:*)",
      "Bash(kustomize build:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(open:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(uniq:*)",
      "Bash(yq:*)",
      "Edit",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(kubectl apply:*)",
      "Bash(kubectl config use-context:*)",
      "Bash(kubectl delete:*)",
      "Bash(kubectl patch:*)",
      "Bash(kubectl replace:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$XDG_CONFIG_HOME/claude/hooks/notify.ts --event notification"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$XDG_CONFIG_HOME/claude/hooks/notify.ts --event stop"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccusage statusline"
  },
  "alwaysThinkingEnabled": true
}
