  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$XDG_CONFIG_HOME/claude/hooks/notify.ts --event stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$XDG_CONFIG_HOME/claude/hooks/notify.ts --event notification"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccusage statusline"
  },
  "outputStyle": "Explanatory",
  "alwaysThinkingEnabled": true,
  "language": "japanese",
  "enabledPlugins": {
    "git-workflows@local": true,
    "langservers@local": true,
    "mcphub@local": true,
    "code-review@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true
  },
  "extraKnownMarketplaces": {
    "local": {
      "source": {
        "source": "directory",
        "path": "$XDG_CONFIG_HOME/claude/plugins/marketplaces/local"
      }
    },
    "claude-code-plugins": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-code"
      }
    },
