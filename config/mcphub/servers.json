{
  "mcpServers": {
    "github-mcp": {
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${cmd:op read 'op://Personal/GitHub API/credential' --no-newline}"
      }
    },
    "atlassian-mcp": {
      "url": "https://mcp.atlassian.com/v1/sse"
    },
    "new-relic-mcp": {
      "url": "https://mcp.newrelic.com/mcp/"
    },
    "serena-mcp": {
      "command": "serena-mcp-server",
      "args": ["--context", "ide-assistant", "--project", ".", "--enable-web-dashboard", "false"]
    },
    "context7-mcp": {
      "command": "context7-mcp"
    },
    "aws-knowledge-mcp-server": {
      "url": "https://knowledge-mcp.global.api.aws"
    },
    "aws-terraform-mcp-server": {
      "command": "awslabs.terraform-mcp-server"
    },
    "codex-mcp": {
      "command": "codex",
      "args": ["mcp-server"]
    },
    "playwright-mcp": {
      "command": "mcp-server-playwright"
    },
    "taskmaster-ai": {
      "command": "task-master-ai"
    }
  }
}
